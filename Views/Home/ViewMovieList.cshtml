@{
    ViewBag.Title = "Top Movies";
}

@model IEnumerable<Movie>
<br />

@foreach (var x in Model)
{
    <div class="card">
        <h5 class="card-header">
            Title: @x.Title
                <a asp-action="EditMovie" asp-route-movieId="@x.MovieId" class="btn btn-outline-primary" style="float:right">Edit</a>
        </h5>
        <div class="card-body">
            <p class="card-text">Category: @x.Category</p>
            <p class="card-text">Year Released: @x.Year</p>
            <p class="card-text">Director: @x.Director</p>
            <p class="card-text">Lent: @x.Lent</p>
            <p class="card-text">Notes: @x.Notes</p>
            <form id="@x.MovieId" asp-action="DeleteMovie" method="post">
                <input type="hidden" value="@x.MovieId" name="movieId" id="movieId" />
                <button type="submit" class="btn btn-outline-danger" style="float:right">Delete</button>
            </form>
        </div>
    </div>
    <br />
    <br />
}
